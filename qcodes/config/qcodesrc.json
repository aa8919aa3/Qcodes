{
    "core":{
        "loglevel": "WARNING",
        "file_loglevel": "INFO",
        "default_fmt": "data/{date}/#{counter}_{name}_{time}",
        "register_magic": true,
        "db_location": "~/experiments.db",
        "db_debug": false
    },
    "gui" :{
        "notebook": true,
        "plotlib": "all",
        "pyqtmaxplots": 100,
        "defaultcolormap": "hot",
        "auto_color_scale":{
            "enabled": false,
            "cutoff_percentile": [0.5, 0.5],
            "color_over": "black",
            "color_under": "white"
        }
    },
    "user": {
        "scriptfolder": ".",
        "mainfolder": "."
    },
    "station_configurator": {
        "enable_forced_reconnect": false,
        "default_folder": ".",
        "default_file": "instrument_config.yml"
    }
}
